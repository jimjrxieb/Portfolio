{
  "name": "portfolio-mvp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose up --build -d",
    "dev:ui": "cd ui && npm run dev",
    "build": "docker-compose build",
    "test": "python3 test_golden_answers.py",
    "lint": "npm run lint:ui",
    "lint:ui": "cd ui && npm run lint",
    "format": "npm run format:ui",
    "format:ui": "cd ui && npm run format",
    "security": "npm run security:ui",
    "security:ui": "cd ui && npm audit --audit-level=moderate",
    "pre-push": "npm run lint && npm run format && npm run security",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "ui/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12"
  }
}
