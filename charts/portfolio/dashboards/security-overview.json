{
  "dashboard": {
    "id": null,
    "title": "Portfolio Security Overview",
    "tags": ["security", "portfolio", "devsecops"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Alerts Summary",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(falco_events_total[5m]))",
            "legendFormat": "Total Security Events"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Critical Security Events",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(falco_events_total{priority=\"Critical\"}[5m]))",
            "legendFormat": "Critical Events"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Vulnerability Scan Results",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(trivy_vulnerabilities_total{severity=\"Critical\"})",
            "legendFormat": "Critical Vulnerabilities"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Policy Compliance",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 * (1 - (sum(gatekeeper_violations_total) / sum(gatekeeper_evaluations_total)))",
            "legendFormat": "Compliance %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(falco_events_total[5m])",
            "legendFormat": "Security Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "pointSize": 5
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Security Events by Priority",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (priority) (rate(falco_events_total[5m]))",
            "legendFormat": "{{priority}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Container Security Violations",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (container, rule) (rate(falco_events_total[5m])))",
            "format": "table",
            "legendFormat": ""
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "container": "Container",
                "rule": "Security Rule",
                "Value": "Events/sec"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Network Policy Violations",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(kubernetes_networkpolicy_violations_total[5m])",
            "legendFormat": "Network Policy Violations"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Image Signature Verification",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(cosign_verified_images_total) / sum(cosign_total_images_total) * 100",
            "legendFormat": "Verified Images %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 100}
              ]
            }
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Security Incidents",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Security.*\"}",
          "iconColor": "red",
          "tagKeys": "alertname,severity"
        }
      ]
    }
  }
}